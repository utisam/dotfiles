[alias]
	history = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[branch]
	sort = -committerdate
[column]
	ui = auto
[commit]
	verbose = true
[diff]
	algorithm = histogram
	colorMoved = default
	renames = copy
	submodule = log
[fetch]
	all = true
	prune = true
	pruneTags = true
[help]
	autocorrect = prompt
[init]
	defaultBranch = main
[log]
	date = iso
[pager]
	# macOS の場合は brew の git に含まれている diff-highlight に PATH を通す必要がある。
	# ln -s $(brew --prefix)/opt/git/share/git-core/contrib/diff-highlight/diff-highlight /usr/local/bin/
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[push]
	# fetch した commit がローカルに取り込まれた場合のみ force push 可
	useForceIfIncludes = true
[pull]
	# fast-forward のみ許可
	ff = only
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
	autoupdate = true
[status]
	submoduleSummary = true
[submodule]
	recurse = true
[tag]
	sort = -version:refname

